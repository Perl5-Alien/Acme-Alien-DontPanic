#!/bin/bash

set -ex

cd $(mktemp -d)
curl -L https://github.com/PerlAlien/Alien-Build/tarball/main | tar zxf -
cd $(ls -1)
dzil-dzil authordeps --missing | dzil-cpanm -n
dzil-dzil build
cpanm -n *.tar.gz

cd $(mktemp -d)
curl -L https://github.com/PerlAlien/Alien-Base-ModuleBuild/tarball/main | tar zxf -
cd $(ls -1)
dzil-dzil authordeps --missing | dzil-cpanm -n
dzil-dzil build
cpanm -n *.tar.gz
