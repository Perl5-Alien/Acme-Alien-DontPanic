#!/bin/bash

set -ex

cd $(mktemp -d)
curl -L https://github.com/Perl5-Alien/Alien-Build/tarball/master | tar zxf -
cd $(ls -1)
dzil-dzil authordeps --missing | dzil-cpanm -n
dzil-dzil build
cpanm -n *.tar.gz

cd $(mktemp -d)
curl -L https://github.com/Perl5-Alien/Alien-Base-ModuleBuild/tarball/master | tar zxf -
cd $(ls -1)
dzil-dzil authordeps --missing | dzil-cpanm -n
dzil-dzil build
cpanm -n *.tar.gz
